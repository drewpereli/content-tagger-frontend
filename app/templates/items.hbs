<div class="col-12 py-4">
  <div class="row">
    <h3 class="d-inline mr-auto">Items</h3>
    <LinkTo class="btn btn-success" @route="items.new">New Item</LinkTo>
  </div>


  {{#each @model.items as |item|}}
    <EditableItem @item={{item}} @allTags={{this.tags}} class="mt-4 border-bottom border-light" />
  {{/each}}
</div>

{{outlet}}
